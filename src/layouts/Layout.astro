---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="curriculum web" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href="me.webp" />
    <meta name="description" content="Astro description" />

    <meta property="og:url" content="https://web-cv-iota.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{title}" />
    <meta property="og:description" content="curriculum web" />
    <meta property="og:image" content="https://web-cv-iota.vercel.app/imagen.jpg"/>

    <meta name="twitter:domain" content="web-cv-iota.vercel.app" />
    <meta name="twitter:url" content="https://web-cv-iota.vercel.app/" />
    <meta name="twitter:title" content="{title}" />
    <meta name="twitter:description" content="curriculum web" />
    <meta name="twitter:image" content="https://web-cv-iota.vercel.app/web-cv.jpg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #030136;
    --Iconography: #64748b;
    --Body-text: #595960;
    --Curator-section: #8d95a2;
    --Background: #ffffff;

    --border-item: #eee;
    --background-hover-item: #eee;
    --border-hover-item: #ddd;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-size: 16px;
  }

  html {
    font-family: "Inter", "Roboto", "Open Sans", "Helvetica Neue", Arial,
      sans-serif;
    background-color: #fff;
    letter-spacing: -0.025rem;
  }

  a {
    text-decoration: none;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family:
      "Inter",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: var(--Body-text);
    font-size: 1rem;
    line-height: 1.5;
    text-wrap: pretty;
    font-weight: 400;
    font-weight: 500;
  }
</style>
